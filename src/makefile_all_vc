
!if defined(AMD64) || "$(CPU)" == "AMD64" || "$(PLATFORM)" == "x64"
#ALLDIRS = ConEmuPlugin ConEmuTh ConEmuLn ConEmuHk
ALLDIRS = ConEmu ConEmuC ConEmuCD ConEmuHk ConEmuDW 
#ConEmuPlugin ConEmuTh ConEmuLn ConEmuBg 
BUILD_SUFFUX=x64
!else
ALLDIRS = ConEmu ConEmuC ConEmuCD ConEmuHk ConEmuDW 
#ConEmuPlugin ConEmuTh ConEmuLn ConEmuBg 
BUILD_SUFFUX=x86
!endif

all: PRECLEAN $(ALLDIRS) ALLCLEAN

incremental: $(ALLDIRS)

FICTIVE=_fictive_
$(FICTIVE):

$(ALLDIRS): $(FICTIVE)
	@echo ===========$@.$(BUILD_SUFFUX)
	@cd $@
	@$(MAKE) -s -f makefile_vc $(_MDEFS)
	@cd ..

.PHONY: PRECLEAN
PRECLEAN:
	@clean.bat

.PHONY: ALLCLEAN
ALLCLEAN:
	@clean.bat
